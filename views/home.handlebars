<div class="row">
    {{!-create three columns-}}
    <div class='col-12 col-md-13'>
        <h2>Create a Burger</h2>
        <form id='burger-form'>
            <div class='form group'>
                <input type='text' class='form-control' placeholder='burger name' name="burger-name">
            </div>
            <button class='btn btn-block btn-outline-success'>Create a 🍔</button>
        </form>
    </div>

    <div class='col-12 col-md-9'>
        <div class='card-header'>
            <h3 class='card-header'>
                Burgers to order
            </h3>
            <ul class='list-group-lush'>
                {{!-- loop through burgers from handlebars and print burgers that are not ordered --}}
                {{#each burgers}}

                {{#unless this.eaten}}
                <li class='list-group-item d-flex justifly-content-between align-items-center align-items-center'>
                    <h4>{{this.burger_name}}</h4>
                    <div>
                        <button class='btn btn-info orderBurger' data-burgerid='{{this.id}}'>Order</button>


                        <button class='btn btn-info deleteBurger' data-burgerid='{{this.id}}'>delete</button>
                    </div>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>


    <div class=' card md-4'>
        <div class='card-header'>
            <h3 class='card-header'>
                Burgers ordered
            </h3>
            <ul class='list-group-lush'>
                {{!-- loop through burgers from handlebars and print burgers that are not ordered --}}
                {{#each burgers}}

                {{#if this.eaten}}
                <li class='list-group-item d-flex justifly-content-between align-items-center align-center'>
                    <h4>{{this.burger_name}}</h4>
                    <div>
                        <button class='btn btn-info deleteBurger' data-burgerid='{{this.id}}'>Eat</button>
                    </div>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

</div>

<script src="./assets/js/burgers.js" type="text/javascript"></script>